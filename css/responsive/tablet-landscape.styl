//copy styles from site.styl

$cols = 12
$gutter = 28px

$margin-small = ($gutter)
$margin-tiny = ($gutter / 2)
$margin-micro = ($gutter / (2 * $golden-ratio))
$margin-basic = ($gutter * 2)
$margin-mid = ($gutter * 3.5)
$margin-large = ($gutter * 5)

$header-height = 296px
$footer-height = 395px

// ******************************************************

// MARGINS AND PADDING

  // MARGIN TOP

.margin-top-micro
  margin-top: $margin-micro

.margin-top-tiny
  margin-top: $margin-tiny

.margin-top-small
  margin-top: $margin-small

.margin-top-basic
  margin-top: $margin-basic

.margin-top-mid
  margin-top: $margin-mid

.margin-top-large
  margin-top: $margin-large

  // MARGIN BOTTOM

.margin-bottom-micro
  margin-bottom: $margin-micro

.margin-bottom-tiny
  margin-bottom: $margin-tiny

.margin-bottom-small
  margin-bottom: $margin-small

.margin-bottom-basic
  margin-bottom: $margin-basic

.margin-bottom-mid
  margin-bottom: $margin-mid

.margin-bottom-large
  margin-bottom: $margin-large

  // PADDING TOP

.padding-top-micro
  padding-top: $margin-micro

.padding-top-tiny
  padding-top: $margin-tiny

.padding-top-small
  padding-top: $margin-small

.padding-top-basic
  padding-top: $margin-basic

.padding-top-mid
  padding-top: $margin-mid

.padding-top-large
  padding-top: $margin-large

  // PADDING BOTTOM

.padding-bottom-micro
  padding-bottom: $margin-micro

.padding-bottom-tiny
  padding-bottom: $margin-tiny

.padding-bottom-small
  padding-bottom: $margin-small

.padding-bottom-basic
  padding-bottom: $margin-basic

.padding-bottom-mid
  padding-bottom: $margin-mid

.padding-bottom-large
  padding-bottom: $margin-large

// ******************************************************

.mobile-only
  display: none

.container
  width: 952px

.row
  padding-top: ($gutter / 2)

.col
  margin-bottom: ($gutter / 2)

.col-l
  flex: 0 0 auto
  padding-right: ($gutter / 2)
  padding-left: ($gutter / 2)

for offset in 0..($cols - 1)
  .offset-l-{offset}
    margin-left: ( 100% / $cols ) * offset

for col in 1..$cols
  .col-l-{col}
    flex-basis: ( 100% / $cols ) * col
    max-width: ( 100% / $cols ) * col


.pagination-section
  .col
    margin-bottom: ($gutter / 2)

.pagination-container
  justify-content: flex-end

.pagination-button
  margin: 0 $margin-micro

.gform_wrapper
  .gform_heading
    margin-bottom: $margin-small

// ******************************************************

#main-content
  min-height: calc('100vh - ' + ($header-height + $footer-height))

#header
  margin-top: 0

#header-primary
  .col
    margin-bottom: 0

#header-menu
  position: relative
  height: auto
  width: auto
  top: auto
  left: auto
  background-color: none
  border-bottom: none

#main-menu
  display: block
  border-top: none

.menu-item
  &.col
    margin-bottom: ( $gutter / 2 )
    margin-top: ( $gutter / 2 )

// ******************************************************

// FRONT PAGE

#front-splash
  padding: 0

#splash-image
  width: 100%
  max-width: 1440px
  margin: 0 auto
  display: block

// ******************************************************

// VISITOR INFO

.venue-map iframe
  border-width: $margin-micro !important

// ******************************************************

// PROGRAM

.calendar-heading
  padding: $margin-small 0

.event-time, .event-times-divider
  display: block
  margin: 0 0 $margin-micro 0
  text-align: center

.event-times-divider
  transform: rotate(0deg)

.event-times-day
  display: block

// ******************************************************

// PRESS

.press-highlight:nth-of-type(2)
  flex-direction: row-reverse

.swiper-container
  height: 500px

.swiper-button-prev, .swiper-button-next
  padding: $margin-small

// ******************************************************

// FOOTER

.lead-sponsor-logo
  margin-right: $margin-small
  margin-bottom: $margin-small

#mailchimp-email
  margin-right: $margin-micro

#mailchimp-response
  margin-left: $margin-micro

#social-icon-container
  flex-direction: column

.social-icon
  margin-bottom: ($margin-micro / 2)

// ******************************************************

// VIP

.post-password-form
  input
    &[name=post_password]
      margin-right: $margin-small

.wrong-password, .gform_confirmation_message
  padding: $margin-tiny

.gform_confirmation_message
  font-size: $font-size-h4

#vip-recommendations
  ul
    columns: 3
