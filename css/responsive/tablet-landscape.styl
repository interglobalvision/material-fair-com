//copy styles from site.styl

$cols = 12
$gutter = 32px 

.mobile-only
  display: none

.container
  width: 952px
  
.col
  margin-bottom: ($gutter / 2)
  
.col-l
  flex: 0 0 auto
  padding-right: ($gutter / 2)
  padding-left: ($gutter / 2)

for offset in 0..($cols - 1)
  .offset-l-{offset}
    margin-left: ( 100% / $cols ) * offset

for col in 1..$cols
  .col-l-{col}
    flex-basis: ( 100% / $cols ) * col
    max-width: ( 100% / $cols ) * col
    
#header
  margin-top: 0
  
#header-primary
  .col
    margin-bottom: 0
    
#header-menu
  position: relative
  height: auto
  width: auto
  top: auto
  left: auto
  background-color: none
  border-bottom: none
  
#main-menu 
  display: block
  border-top: none

.menu-item
  &.col 
    margin-bottom: ( $gutter / 2 )