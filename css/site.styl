@import "kouto-swiss"
@import "helpers"
@import "fonts"
@import "swiper"

// ******************************************************

// FONTS

// ******************************************************

// ICONS FONTS

// ** https://genericons.com WP icon font set
// @import "fonts/icons/genericons"

// ** minimal version of Google Materialize UI icons. check the styl for usage
@import "fonts/icons/materialize-min"

// ** full set of Google Materialize. https://design.google.com/icons/
// @import "fonts/icons/materialize"

// ******************************************************

meyer-reset()
box-sizing-reset()
normalize()

// ******************************************************

// VARIABLES

$cols = 12
$gutter = 24px

$golden-ratio = 1.61803398875

$margin-small = ($gutter)
$margin-tiny = ($gutter / 2)
$margin-micro = ($gutter / (2 * $golden-ratio))
$margin-basic = ($gutter * 2)
$margin-mid = ($gutter * 3.5)
$margin-large = ($gutter * 5)

$font-size-basic = 13px
$font-size-larger = 1.3rem
$font-size-h4 = golden-ratio(1rem , 0.5)
$font-size-h3 = golden-ratio(1rem , 1)
$font-size-h2 = golden-ratio(1rem , 1.8)
$font-size-h1 = golden-ratio(1rem , 2)

$font-leading-basic = 1.35
$font-leading-tighter = 1.15
$font-leading-larger = 1.45

$font-tracking-basic = 0.001em
$font-tracking-wider = 0.05em

$font-sans = 'Akkurat Pro', 'Helvatica Neue', Helvetica, Arial, sans-serif
$font-serif = 'Stanley', 'Times New Roman', Times, Georgia, serif

$color-black = rgb(0, 0, 0)
$color-black-trans = rgba(0, 0, 0, 0.8)
$color-white = rgb(255, 255, 255)
$color-yellow = rgb(255, 217, 35)
$color-green = rgb(0, 152, 112)
$color-pink = rgb(255, 123, 172)

$header-height = 300px
$footer-height = 732px

// ******************************************************

// GRID

.container
  margin: 0 auto
  width: 96%

.row
  box-sizing: border-box
  display: flex
  flex: 0 1 auto
  flex-direction: row
  flex-wrap: wrap
  padding-top: ($gutter / 2)
  &.reverse
    flex-direction: row-reverse

// FLEX POSITIONING

.flex-col
  box-sizing: border-box
  display: flex
  flex-direction: column
  &.reverse
    flex-direction: column-reverse

.flex-row
  box-sizing: border-box
  display: flex
  flex-direction: row
  flex-wrap: wrap
  &.reverse
    flex-direction: row-reverse

.justify-start
  justify-content: flex-start

.justify-center
  justify-content: center

.justify-end
  justify-content: flex-end

.align-start
  align-items: flex-start

.align-center
  align-items: center

.align-end
  align-items: flex-end

.align-content-start
  align-content: flex-start

.align-content-center
  align-content: center

.align-content-end
  align-content: flex-end

// COLUMN SIZES & OFFSETS

.col
  box-sizing: border-box
  flex-grow: 1
  flex-basis: 0
  max-width: 100%
  margin-bottom: ($gutter / 2)

.col-s
  flex: 0 0 auto
  padding-right: ($gutter / 2)
  padding-left: ($gutter / 2)

for offset in 0..($cols - 1)
  .offset-s-{offset}
    margin-left: ( 100% / $cols ) * offset

for col in 1..$cols
  .col-s-{col}
    flex-basis: ( 100% / $cols ) * col
    max-width: ( 100% / $cols ) * col

// ******************************************************

// TYPOGRAPHY

html
  font-family: $font-sans
  font-size: $font-size-basic
  letter-spacing: $font-tracking-basic
  color: $color-white

body
  line-height: $font-leading-basic

  // HTML ELEMENT STYLING

h1, .font-size-h1
  font-size: $font-size-h1
  line-height: $font-leading-tighter
  margin: 0
  font-family: $font-serif
  font-weight: 900

h2, .font-size-h2
  font-size: $font-size-h2
  line-height: $font-leading-tighter
  font-family: $font-serif
  font-weight: bold

h3, .font-size-h3
  font-size: $font-size-h3

h4, .font-size-h4
  font-size: $font-size-h4

p
  margin-bottom: 1rem

  // FONT RULES

.font-italic
  font-style: italic

.font-bold
  font-weight: bold

.font-small-caps
  font-size: 0.85em
  text-transform: uppercase

.font-uppercase
  text-transform: uppercase

.font-capitalize
  text-transform: capitalize

.font-sans
  font-family: $font-sans !important

.font-serif
  font-family: $font-serif !important

  // TEXT RULES

.text-overflow-ellipsis
  overflow: ellipsis

.text-align-left
  text-align: left

.text-align-right
  text-align: right

.text-align-center
  text-align: center

  // LINKS

a,
a:active,
a:visited
  color: inherit
  text-decoration: none

p
  a,
  a:active,
  a:visited
    border-bottom: 1px solid
    border-color: inherit

.border-underline
  border-bottom: 1px solid
  border-color: inherit

  // FONT COLORS

.font-yellow
  color: $color-yellow

.font-green
  color: $color-green

.font-pink
  color: $color-pink

// ******************************************************

// BASIC

html
  background-color: $color-black
  background-image: url('../img/dist/background.svg')
  background-size: cover
  background-repeat: no-repeat
  background-position: center 0

h1, h2
  color: $color-yellow
  
#main-content 
  min-height: calc('100vh - ' + ($header-height + $footer-height))

.border-row
  margin-left: $margin-tiny
  margin-right: $margin-tiny 
  border-top: 1px solid $color-yellow
  &:last-of-type
    border-bottom: 1px solid $color-yellow

  .col
    &:first-of-type
      padding-left: 0
    &:last-of-type
      padding-right: 0

.section
  width: 100%
  padding: $margin-small 0
  border-top: 1px solid $color-yellow

.section-yellow, .section-pink 
  color: $color-black
  border-color: $color-black
  .button, a.button
    background-color: $color-black
    color: $color-white
    border: none
  h1, h2
    color: inherit
  .border-row
    border-color: $color-black
    
.section-yellow
  background-color: $color-yellow
  
.section-pink
  background-color: $color-pink
  
.section-black-trans
  background-color: $color-black-trans
  
.pagination-section
  .col
    margin-bottom: ($gutter / 2)

.pagination-container
  justify-content: space-between

img
  max-width: 100%
  height: auto

.button, a.button
  background-color: $color-pink
  color: $color-black
  padding: $margin-tiny
  text-transform: uppercase
  font-weight: 600
  border: 2px solid $color-black
  &.button-big
    padding: $margin-small 0
    font-size: $font-size-h4
  &.button-yellow
    background-color: $color-yellow
  &.button-margin-right
    margin-right: $margin-tiny

input
  border: 1px solid $color-black
  padding: $margin-micro
  -webkit-appearance: none
  background: none
  color: inherit
  &:focus
    outline: none
  &:-webkit-autofill
    -webkit-box-shadow: 0 0 0px 1000px $color-yellow inset !important //Hack kills autofill yellow
  &:disabled
    opacity: 0.2

::placeholder
  color: inherit !important


// ******************************************************

// MARGINS AND PADDING

  // MARGIN TOP

.margin-top-micro
  margin-top: $margin-micro

.margin-top-tiny
  margin-top: $margin-tiny

.margin-top-small
  margin-top: $margin-small

.margin-top-basic
  margin-top: $margin-basic

.margin-top-mid
  margin-top: $margin-mid

.margin-top-large
  margin-top: $margin-large

  // MARGIN BOTTOM

.margin-bottom-micro
  margin-bottom: $margin-micro

.margin-bottom-tiny
  margin-bottom: $margin-tiny

.margin-bottom-small
  margin-bottom: $margin-small

.margin-bottom-basic
  margin-bottom: $margin-basic

.margin-bottom-mid
  margin-bottom: $margin-mid

.margin-bottom-large
  margin-bottom: $margin-large

  // PADDING TOP

.padding-top-micro
  padding-top: $margin-micro

.padding-top-tiny
  padding-top: $margin-tiny

.padding-top-small
  padding-top: $margin-small

.padding-top-basic
  padding-top: $margin-basic

.padding-top-mid
  padding-top: $margin-mid

.padding-top-large
  padding-top: $margin-large

  // PADDING BOTTOM

.padding-bottom-micro
  padding-bottom: $margin-micro

.padding-bottom-tiny
  padding-bottom: $margin-tiny

.padding-bottom-small
  padding-bottom: $margin-small

.padding-bottom-basic
  padding-bottom: $margin-basic

.padding-bottom-mid
  padding-bottom: $margin-mid

.padding-bottom-large
  padding-bottom: $margin-large

// ******************************************************

// HEADER

#header
  margin-top: 53px // height of #header-mobile
  border-top: 0
  background-color: $color-black
  p
    margin-bottom: 0
  #header-logo
    line-height: 0
    img
      width: 100%
      height: auto
  .button
    border: none

ul.language-chooser
  li
    display:inline-block
    border-color: inherit
    border-bottom: none
    &:first-of-type:after
      content: ' /'
    &:last-of-type:before
      content: '/ '
    &.active
      border-bottom: 1px solid
      &:after
        content: ''
      &:before
        content: ''
    a
      background: none

#header-menu
  position: fixed
  height: auto
  width: 100%
  top: 0
  left: 0
  background-color: $color-black
  border-bottom: 1px solid $color-pink
  overflow: hidden
  z-index: 9999

#header-mobile
  font-size: 21px
  padding-bottom: 14px
  padding-top: 14px
  .col
    margin-bottom: 0
  h1
    font-size: inherit
  .menu-toggle
    font-size: 18px
    line-height: 1.2em
    transform: rotate(0deg)
    transition: transform 400ms ease-in-out
    &.open
      transform: rotate(180deg)

#main-menu
  display: none
  border-top: 1px solid $color-pink

.menu-item
  padding: 0
  &.col
    margin-bottom: $margin-small
    
// ******************************************************

// FRONT PAGE

#front-splash
  padding: 0

#splash-image
  width: 100%
  max-width: 1440px
  margin: 0 auto
  display: block
  
// ******************************************************

// VISITOR INFO

.venue-map iframe
  width: 100%
  max-height: 500px
  flex-grow: 1
  border: $margin-micro solid $color-yellow !important
  
// ******************************************************

// PROGRAM

.calendar-heading
  padding: $margin-small 0
  cursor: pointer
  justify-content: space-between
  .col
    margin-bottom: 0
  .calendar-date:after
    content: '▼'
  &.active
    .calendar-date:after
      content: '▲'

.calendar-events
  height: 0
  overflow: hidden

.event-time, .event-times-divider
  display: inline-block
  margin: 0 $margin-micro 0 0

.event-times-divider
  transform: rotate(90deg)
  
// ******************************************************

// PRESS

.swiper-container
  height: 500px

.swiper-slide img
  max-height: 0px
  
.slide-caption
  position: relative
  
.swiper-button-prev, .swiper-button-next
  width: auto
  height: auto
  background-size: 80%
  padding: $margin-tiny

.swiper-button-prev
  background-image: url('../img/dist/left_triangle.svg')

.swiper-button-next
  background-image: url('../img/dist/right_triangle.svg')
  
// ******************************************************

// FOOTER

#footer-logo
  max-width: 47px

.lead-sponsor-logo
  margin-right: $margin-small
  margin-bottom: $margin-small

#mailchimp-email
  flex: 1 1 auto
  margin-right: $margin-micro

#mailchimp-response
  margin-left: $margin-micro

#social-icon-container
  display: flex
  flex-direction: row
  align-items: flex-end

.social-icon
  display: flex
  justify-content: center
  
// ******************************************************
  
// READING MATERIAL

.highlight-holder
  position: relative
  
.highlight-image
  vertical-align: bottom
  
.highlight-details 
  width: 100%
  padding-top: 0
  
// ******************************************************

// VIP 

.post-password-form
  input 
    border-color: $color-white
    &[name=post_password]
      margin-right: $margin-small
      width: 100%
    &[type=submit]
      background-color: $color-white 
      color: $color-black
      margin-top: $margin-tiny
      width: 100%
      &:hover 
        background-color: $color-yellow
        
.wrong-password 
  background-color: $color-yellow 
  padding: $margin-tiny
  color: $color-black
  border: 1px solid $color-black
  
// ******************************************************

// 404

.dude
  animation: dance 1s infinite ease-in-out
  transform-origin: center

@keyframes dance
  0%
    transform: rotateY(30deg) rotateZ(-20deg) translateY(10%)
  50%
    transform: rotateY(-30deg) rotateZ(20deg) translateY(0%)
  100%
    transform: rotateY(30deg) rotateZ(-20deg) translateY(10%)

// ******************************************************

// MEDIA QUERIES

@media screen and (max-width: 952px)

  .desktop-only
    display: none

@media screen and (min-width: 568px) // iphone5 width

  @import "responsive/mobile-landscape"

@media screen and (min-width: 712px)

  @import "responsive/tablet-portrait"

@media screen and (min-width: 952px)

  @import "responsive/tablet-landscape"

@media screen and (min-width: 1150px) // desktop

  @import "responsive/desktop"